<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>
<div class="login">
  <div class="container">
    <div class="form">

      <h1>Sign up</h1>

      <%= form_for(@user) do |f| %>

          <%= f.text_field :username, :placeholder => "UseHerName", class: 'p1 mt2 block border1 border-color-smoke' %>
          <%= f.email_field :email, :placeholder => "Email", class: 'p1 border1 mt2 block border-color-smoke' %>
          <%= f.password_field :password, :placeholder => "Password", class: 'p1 mt2 block border1 border-color-smoke' %>

          <%= f.submit "Create an account", class: "background-color-fire p1 mt2 border-none color-canvas" %>
      <% end %>

    </div>
  </div>
</div>
